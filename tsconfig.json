{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./typechain"]
  },
  "include": [
    "scripts/**/*",
    "test/**/*",
    "typechain/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "cache"
  ]
} 